{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "resolveJsonModule": true,
    "noEmit": false,
    "allowJs": true,
    "incremental": true,
    "sourceMap": true,
    "typeRoots": [
      "../@types",
      "../node_modules/@types",
      "../node_modules/link-lib/@types"
    ]
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
    "./*.tsx",
    "./**/*.tsx"
  ]
}

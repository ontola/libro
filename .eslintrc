{
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "local-rules"
  ],
  "env": {
    "shared-node-browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "root": true,
  "globals": {
    "__CLIENT__": true,
    "__DEV__": true,
    "__DEVELOPMENT__": true,
    "__LEGACY__": true,
    "__PRODUCTION__": true,
    "__TEST__": true,
    "__VERSION__": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "templateStrings": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.8.6"
    },
    "import/resolver": {
      "node": {},
      "webpack": {
        "config": "./webpack/common.config.js"
      }
    },
    "import/ignore": [
      "test-utils"
    ]
  },
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "jsx-quotes": ["error", "prefer-double"],
    "react/prop-types": "off",
    "react/display-name": "off",
    "import/order": ["error", {
      "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
      "newlines-between": "always"
    }],
    "no-unused-vars": "off",
    // Accessibility
    // The ones that are commented out resulted in errors. May be something wrong with the jsx-a11y plugin.
    // "jsx-a11y/anchor-has-content": 2,
    "jsx-a11y/aria-props": 2,
    "jsx-a11y/aria-proptypes": 2,
    "jsx-a11y/aria-role": 2,
    "jsx-a11y/aria-unsupported-elements": 2,
    "jsx-a11y/click-events-have-key-events": 2,
    "jsx-a11y/heading-has-content": 2,
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }],
    "jsx-a11y/html-has-lang": 2,
    "jsx-a11y/alt-text": 1,
    "jsx-a11y/img-redundant-alt": 2,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/lang": 2,
    "jsx-a11y/mouse-events-have-key-events": 2,/* global module */
    "jsx-a11y/no-access-key": 2,
    "jsx-a11y/no-distracting-elements": 2,
    "jsx-a11y/no-noninteractive-tabindex": 1,
    "jsx-a11y/no-onchange": 2,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/interactive-supports-focus": 2,
    "jsx-a11y/label-has-associated-control": 1,
    "jsx-a11y/no-noninteractive-element-interactions": 2,
    "jsx-a11y/role-has-required-aria-props": 2,
    "jsx-a11y/role-supports-aria-props": 2,
    "jsx-a11y/scope": 2,
    "jsx-a11y/tabindex-no-positive": 2,
    "import/dynamic-import-chunkname": "error",
    "import/extensions": ["error", {
      "css": "always",
      "json": "always",
      "scss": "always",
      "ts": "never",
      "tsx": "never"
    }],
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }],
    "import/no-duplicates": "error",
    "import/prefer-default-export": "off",
    "local-rules/import-declaration-newline": ["error", {
      "minProperties": 3,
      "countDefault": false
    }],
    "local-rules/export-declaration-newline": ["error", {
      "minProperties":  3,
      "countDefault": false
    }],
    "no-multiple-empty-lines": "error",
    "object-property-newline": ["error", {
      "allowAllPropertiesOnSameLine": false,
      "allowMultiplePropertiesPerLine": false
    }],
    "object-curly-newline": ["error", {
      "ObjectExpression": {
        "consistent": true,
        "multiline": true,
        "minProperties": 2
      },
      "ObjectPattern": {
        "consistent": true,
        "multiline": true,
        "minProperties": 4
      },
      "ImportDeclaration": { "multiline": true, "minProperties": 3 },
      "ExportDeclaration": {
        "consistent": true,
        "multiline": true,
        "minProperties": 3
      }
    }],
    "object-curly-spacing": ["error", "always"],
    "one-var-declaration-per-line": ["error", "initializations"],
    "one-var": ["error", { "uninitialized": "never" }],
    "padding-line-between-statements": ["error",
      {
        "blankLine": "always",
        "next": "return",
        "prev": "*"
      },
      {
        "blankLine": "always",
        "next": "export",
        "prev": "*"
      },
      {
        "blankLine": "any",
        "next": "export",
        "prev": "export"
      }
    ],
    "react/button-has-type": "warn",
    "react/function-component-definition": ["error", {
      "namedComponents": "arrow-function",
      "unnamedComponents": "arrow-function"
    }],
    "react/jsx-props-no-spreading": 0,
    "react/jsx-sort-props": ["error", {
      "callbacksLast": true,
      "shorthandFirst": true
    }],
    "react/jsx-boolean-value": "error",
    "react/self-closing-comp": "error",
    "react/jsx-closing-bracket-location": "error",
    "react/jsx-closing-tag-location": "error",
    "react/jsx-equals-spacing": "error",
    "react/jsx-indent-props": ["error", 2],
    "react/jsx-indent": ["error", 2],
    "react/jsx-max-props-per-line": ["error", {
      "when": "multiline"
    }],
    "react/jsx-props-no-multi-spaces": "error",
    "react/jsx-wrap-multilines": "error",
    "react/sort-comp": [2, {
      "order": [
        "contextType",
        "type",
        "property",
        "topology",
        "mapDataToProps",
        "linkOpts",
        "hocs",
        "propTypes",
        "static-methods",
        "lifecycle",
        "everything-else",
        "render"
      ]
    }],
    "react/static-property-placement": 0,
    "sort-imports": ["error", { "ignoreDeclarationSort": true }],
    "sort-keys": ["error", "asc", { "natural": true }],
    "space-unary-ops": ["error", { "words": true, "nonwords": false }],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "no-console": "error",
    "no-else-return": ["error", { "allowElseIf": true }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-magic-numbers": "off",
    "@typescript-eslint/no-magic-numbers": ["error", {
      "ignore": [
        -1, 0, 1,
        100],
      "ignoreEnums": true
    }],
    "no-restricted-syntax": 0,
    "no-shadow": "error",
    "no-invalid-this": "error",
    "no-unmodified-loop-condition": "error",
    "no-undef-init": "error",
    "no-inline-comments": "error",
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": ["Alert", "Record", "Namespace", "Spring"]
      }
    ],
    "react/jsx-fragments": ["error", "element"],
    "react/jsx-one-expression-per-line": 0,
    "react/require-default-props": 0,
    "react/destructuring-assignment": 0,
    "react/prefer-stateless-function": 0,
    "import/no-webpack-loader-syntax": "error",
    "eol-last": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "plugins": [ "@typescript-eslint"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-shadow": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/explicit-module-boundary-types": ["error", { "allowedNames": ["render"] }],
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-unused-vars": ["warn", {"argsIgnorePattern": "([iI]gnored|^_+)", "varsIgnorePattern": "([iI]gnored|^_+)"}],
        "@typescript-eslint/semi": "error",
        "@typescript-eslint/no-shadow": "error",
        "@typescript-eslint/comma-dangle": ["error", {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "always-multiline",
          "enums": "always-multiline",
          "generics": "always-multiline",
          "tuples": "always-multiline"
        }],
        "@typescript-eslint/array-type": ["error", {
          "default": "array-simple",
          "readonly": "array-simple"
        }]
      }
    },
    {
      "files": ["*.d.ts"],
      "rules": {
        "one-var": "off"
      }
    },
    {
      "files": ["app/**/*.js", "app/**/*.jsx"],
      "env": {
        "browser": true
      }
    },
    {
      "files": ["server/*", "webpack/*"],
      "env": {
        "node": true
      }
    },
    {
      "files": ["*.spec.js", "*.spec.jsx", "tests/*.js", "**/__tests__/*.js"],
      "env": {
        "jest": true
      },
      "globals": {
        // Node Specs
        "global": true,

        // Shared specs
        "declareProps": true,
        "defineMarker": true,
        "its": true,
        "marker": true,
        "markerNS": true,
        "testProps": true,
        "set": true,
        "setProp": true,
        "subject": true,

        // Unit specs
        "argUnit": true,

        // View specs
        "as": true,
        "describeView": true,
        "c": true,
        "ch": true,
        "list": true,
        "r": true,
        "s": true,
        "seq": true,
        "t": true,
        "within": true
      }
    }
  ]
}

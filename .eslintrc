{
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "local-rules"
  ],
  "env": {
    "shared-node-browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "root": true,
  "globals": {
    "__CLIENT__": true,
    "__DEV__": true,
    "__DEVELOPMENT__": true,
    "__LEGACY__": true,
    "__PRODUCTION__": true,
    "__TEST__": true,
    "__VERSION__": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "templateStrings": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.8.6"
    },
    "import/resolver": {
      "node": {},
      "webpack": {
        "config": "./webpack/common.config.js"
      }
    },
    "import/ignore": [
      "test-utils"
    ]
  },
  "rules": {
    "@typescript-eslint/no-magic-numbers": ["error",
      {
        "ignore": [
          -1, 0, 1, 2,
          100
        ],
        "ignoreEnums": true
      }
    ],
    "arrow-parens": ["error", "always"],
    "arrow-body-style": ["error", "as-needed"],
    "arrow-spacing": "error",
    "eol-last": ["error", "always"],
    "import/dynamic-import-chunkname": "error",
    "import/extensions": ["error",
      {
        "css": "always",
        "json": "always",
        "scss": "always",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/first": "error",
    "import/newline-after-import": "error",
    // Accessibility
    // The ones that are commented out resulted in errors. May be something wrong with the jsx-a11y plugin.
    // "jsx-a11y/anchor-has-content": "error",
    "import/no-duplicates": "error",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }],
    "import/no-webpack-loader-syntax": "error",
    "import/order": ["error", {
      "groups": [
        "builtin",
        "external",
        "internal",
        "parent",
        "sibling",
        "index"
      ],
      "newlines-between": "always"
    }],
    "import/prefer-default-export": "off",
    "indent": ["error", 2],
    "jsx-a11y/alt-text": "warn",
    "jsx-a11y/anchor-is-valid": ["error", {
      "components": ["Link"],
      "specialLink": ["to"]
    }],
    "jsx-a11y/aria-props": "error",
    "jsx-a11y/aria-proptypes": "error",
    "jsx-a11y/aria-role": "error",
    "jsx-a11y/aria-unsupported-elements": "error",
    "jsx-a11y/click-events-have-key-events": "error",
    /* global module */
    "jsx-a11y/heading-has-content": "error",
    "jsx-a11y/html-has-lang": "error",
    "jsx-a11y/img-redundant-alt": "error",
    "jsx-a11y/interactive-supports-focus": "error",
    "jsx-a11y/label-has-associated-control": "warn",
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/lang": "error",
    "jsx-a11y/mouse-events-have-key-events": "error",
    "jsx-a11y/no-access-key": "error",
    "jsx-a11y/no-distracting-elements": "error",
    "jsx-a11y/no-noninteractive-element-interactions": "error",
    "jsx-a11y/no-noninteractive-tabindex": "warn",
    "jsx-a11y/no-onchange": "error",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",
    "jsx-a11y/scope": "error",
    "jsx-a11y/tabindex-no-positive": "error",
    "jsx-quotes": ["error", "prefer-double"],
    "local-rules/export-declaration-newline": ["error", {
      "minProperties": 3,
      "countDefault": false
    }],
    "local-rules/import-declaration-newline": ["error", {
      "minProperties": 3,
      "countDefault": false
    }],
    "new-cap": ["error",
      {
        "capIsNewExceptions": [
          "Alert",
          "Record",
          "Namespace",
          "Spring"
        ]
      }
    ],
    "no-console": "error",
    "no-else-return": ["error", {
      "allowElseIf": true
    }],
    "no-inline-comments": "error",
    "no-invalid-this": "error",
    "no-magic-numbers": "off",
    "no-multiple-empty-lines": "error",
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "no-restricted-syntax": "off",
    "no-shadow": "error",
    "no-undef-init": "error",
    "no-unmodified-loop-condition": "error",
    "no-unused-vars": "off",
    "object-curly-newline": ["error",
      {
        "ObjectExpression": {
          "consistent": true,
          "multiline": true,
          "minProperties": 2
        },
        "ObjectPattern": {
          "consistent": true,
          "multiline": true,
          "minProperties": 4
        },
        "ImportDeclaration": {
          "multiline": true,
          "minProperties": 3
        },
        "ExportDeclaration": {
          "consistent": true,
          "multiline": true,
          "minProperties": 3
        }
      }
    ],
    "object-curly-spacing": ["error", "always"],
    "object-property-newline": ["error", {
      "allowAllPropertiesOnSameLine": false,
      "allowMultiplePropertiesPerLine": false
    }],
    "one-var": ["error", {
      "uninitialized": "never"
    }],
    "one-var-declaration-per-line": ["error", "initializations"],
    "padding-line-between-statements": ["error",
      {
        "blankLine": "always",
        "next": "return",
        "prev": "*"
      },
      {
        "blankLine": "always",
        "next": "export",
        "prev": "*"
      },
      {
        "blankLine": "any",
        "next": "export",
        "prev": "export"
      }
    ],
    "quotes": ["error", "single", {
      "avoidEscape": true
    }],
    "react/button-has-type": "warn",
    "react/destructuring-assignment": "off",
    "react/display-name": "off",
    "react/function-component-definition": ["error", {
      "namedComponents": "arrow-function",
      "unnamedComponents": "arrow-function"
    }],
    "react/jsx-boolean-value": "error",
    "react/jsx-closing-bracket-location": "error",
    "react/jsx-closing-tag-location": "error",
    "react/jsx-curly-brace-presence": "error",
    "react/jsx-curly-newline": ["error", {
      "multiline": "forbid",
      "singleline": "forbid"
    }],
    "react/jsx-curly-spacing": "error",
    "react/jsx-equals-spacing": "error",
    "react/jsx-first-prop-new-line": ["error",
      "multiline"
    ],
    "react/jsx-fragments": ["error",
      "element"
    ],
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "react/jsx-max-props-per-line": ["error",
      {
        "when": "multiline"
      }
    ],
    "react/jsx-no-constructed-context-values": "error",
    "react/jsx-one-expression-per-line": ["error",
      {
        "allow": "single-child"
      }
    ],
    "react/jsx-props-no-multi-spaces": "error",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-sort-default-props": "error",
    "react/jsx-sort-props": ["error",
      {
        "callbacksLast": true,
        "shorthandFirst": true
      }
    ],
    "react/jsx-tag-spacing": ["error", {
      "beforeClosing": "never"
    }],
    "react/jsx-wrap-multilines": "error",
    "react/prefer-stateless-function": "off",
    "react/prop-types": "off",
    "react/require-default-props": "off",
    "react/self-closing-comp": "error",
    "react/sort-comp": ["error", {
      "order": [
        "contextType",
        "type",
        "property",
        "topology",
        "mapDataToProps",
        "linkOpts",
        "hocs",
        "propTypes",
        "static-methods",
        "lifecycle",
        "everything-else",
        "render"
      ]
    }],
    "react/static-property-placement": "off",
    "sort-imports": ["error", {
      "ignoreDeclarationSort": true
    }],
    "sort-keys": ["error", "asc", {
      "natural": true
    }],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "space-unary-ops": ["error", {
      "words": true,
      "nonwords": false
    }]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "plugins": [ "@typescript-eslint"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-shadow": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/explicit-module-boundary-types": ["error", {
          "allowedNames": [
            "componentDidUpdate",
            "componentWillUnmount",
            "componentDidCatch",
            "render"
          ]
        }],
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-unused-vars": ["warn", {"argsIgnorePattern": "([iI]gnored|^_+)", "varsIgnorePattern": "([iI]gnored|^_+)"}],
        "@typescript-eslint/semi": "error",
        "@typescript-eslint/no-shadow": "error",
        "@typescript-eslint/comma-dangle": ["error", {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "always-multiline",
          "enums": "always-multiline",
          "generics": "always-multiline",
          "tuples": "always-multiline"
        }],
        "@typescript-eslint/array-type": ["error", {
          "default": "array-simple",
          "readonly": "array-simple"
        }]
      }
    },
    {
      "files": ["*.d.ts"],
      "rules": {
        "one-var": "off"
      }
    },
    {
      "files": ["app/**/*.js", "app/**/*.jsx"],
      "env": {
        "browser": true
      }
    },
    {
      "files": ["server/*", "webpack/*"],
      "env": {
        "node": true
      }
    },
    {
      "files": ["*.spec.js", "*.spec.jsx", "tests/*.js", "**/__tests__/*.js"],
      "env": {
        "jest": true
      },
      "globals": {
        // Node Specs
        "global": true,

        // Shared specs
        "declareProps": true,
        "defineMarker": true,
        "its": true,
        "marker": true,
        "markerNS": true,
        "testProps": true,
        "set": true,
        "setProp": true,
        "subject": true,

        // Unit specs
        "argUnit": true,

        // View specs
        "as": true,
        "describeView": true,
        "c": true,
        "ch": true,
        "list": true,
        "r": true,
        "s": true,
        "seq": true,
        "t": true,
        "within": true
      }
    }
  ]
}

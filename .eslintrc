{
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "extends": "airbnb",
  "root": true,
  "globals": {
    "__CLIENT__": true,
    "__DEV__": true,
    "__DEVELOPMENT__": true,
    "__ORIGIN__": true,
    "__PRODUCTION__": true,
    "__SERVER__": true,
    "__TEST__": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "templateStrings": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.4.1"
    },
    "import/resolver": {
      "webpack": {
        "config": "./webpack/common.config.js"
      }
    }
  },
  "rules": {
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "never"
    }],
    "valid-jsdoc": "error",
    // Accessibility
    // The ones that are commented out resulted in errors. May be something wrong with the jsx-a11y plugin.
    // "jsx-a11y/anchor-has-content": 2,
    "jsx-a11y/aria-props": 2,
    "jsx-a11y/aria-proptypes": 2,
    "jsx-a11y/aria-role": 2,
    "jsx-a11y/aria-unsupported-elements": 2,
    "jsx-a11y/click-events-have-key-events": 2,
    "jsx-a11y/heading-has-content": 2,
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }],
    "jsx-a11y/html-has-lang": 2,
    "jsx-a11y/alt-text": 1,
    "jsx-a11y/img-redundant-alt": 2,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/lang": 2,
    "jsx-a11y/mouse-events-have-key-events": 2,
    "jsx-a11y/no-access-key": 2,
    "jsx-a11y/no-distracting-elements": 2,
    "jsx-a11y/no-noninteractive-tabindex": 1,
    "jsx-a11y/no-onchange": 2,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/interactive-supports-focus": 2,
    "jsx-a11y/no-noninteractive-element-interactions": 2,
    "jsx-a11y/role-has-required-aria-props": 2,
    "jsx-a11y/role-supports-aria-props": 2,
    "jsx-a11y/scope": 2,
    "jsx-a11y/tabindex-no-positive": 2,
    // Code style
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }],
    "import/prefer-default-export": "error",
    "import/first": "error",
    "import/order": ["error", {
      "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
      "newlines-between": "always"
    }],
    "one-var-declaration-per-line": ["error", "initializations"],
    "one-var": ["error", { "uninitialized": "always" }],
    "react/button-has-type": "warn",
    "react/jsx-sort-props": ["error", {
      "callbacksLast": true,
      "shorthandFirst": true
    }],
    "sort-keys": ["error", "asc", { "natural": true }],
    "space-unary-ops": ["error", { "words": true, "nonwords": false }],
    "no-else-return": ["error", { "allowElseIf": true }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-magic-numbers": ["error", {
      "ignore": [
        -1, 0, 1,
        100]
    }],
    "no-shadow": "error",
    "no-invalid-this": "error",
    "no-unmodified-loop-condition": "error",
    "no-undef-init": "error",
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "[iI]gnored",
      "varsIgnorePattern": "[iI]gnored"
    }],
    "no-inline-comments": "error",
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": ["Alert", "Record", "Namespace"]
      }
    ],
    "react/jsx-one-expression-per-line": 0,
    "react/require-default-props": 0,
    "react/destructuring-assignment": 0,
    "import/no-webpack-loader-syntax": "error"
  },
  "overrides": [
    {
      "files": ["app/**/*.js", "app/**/*.jsx"],
      "env": {
        "browser": true
      }
    },
    {
      "files": "server/*",
      "env": {
        "node": true
      }
    },
    {
      "files": ["*.spec.js", "*.spec.jsx", "tests/*.js", "**/__tests__/*.js"],
      "env": {
        "jest": true
      },
      "globals": {
        // Shared specs
        "declareProps": true,
        "defineMarker": true,
        "its": true,
        "marker": true,
        "markerNS": true,
        "testProps": true,
        "set": true,
        "setProp": true,
        "subject": true,

        // Unit specs
        "argUnit": true,

        // View specs
        "as": true,
        "describeView": true,
        "c": true,
        "ch": true,
        "r": true,
        "s": true,
        "t": true
      }
    }
  ]
}
